<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Manager App</title>
    <link rel="stylesheet" href="~/css/ManagerHomeStyle.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="cloudy-night"></ion-icon>
                        </span>
                        <span class="title">Climate system</span>
                    </a>
                </li>

	            <li>
		            <a asp-controller="Home" asp-action="Index">
			            <span class="icon">
				            <ion-icon name="home-outline"></ion-icon>
			            </span>
			            <span class="title">Dashboard</span>
		            </a>
	            </li>


                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="chatbox-ellipses"></ion-icon>
                        </span>
                        <span class="title">Orders</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="CalculateBTU" asp-action="Index">
                        <span class="icon">
                            <ion-icon name="calculator-outline"></ion-icon>
                        </span>
                        <span class="title">Calculator</span>
	                </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="hammer"></ion-icon>
                        </span>
                        <span class="title">Warehouse</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="globe-outline"></ion-icon>
                        </span>
                        <span class="title">Navigation</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="help-outline"></ion-icon>
                        </span>
                        <span class="title">Help</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="settings-outline"></ion-icon>
                        </span>
                        <span class="title">Settings</span>
                    </a>
                </li>

	            <li>
                    <a asp-controller="FindConditionersBTU" asp-action="ConditionersHome">
			            <span class="icon">
				            <ion-icon name="thermometer-outline"></ion-icon>
			            </span>
			            <span class="title">Conditioners</span>
		            </a>
	            </li>


                <!-- Sign Out -->
                <li>
	                <a href="#" onclick="document.getElementById('logoutForm').submit(); return false;">
		                <span class="icon">
			                <ion-icon name="log-out-outline"></ion-icon>
		                </span>
		                <span class="title">Sign Out</span>
	                </a>

	                <form id="logoutForm" asp-controller="Register" asp-action="Logout" method="post" style="display:none;">
		                @Html.AntiForgeryToken()
                    </form>
                </li>
            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                    <img src="~/imgs/customer01.jpg" alt="">
                </div>
            </div>

            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

	<script src="~/js/FindConditioners.js"></script>
	<script src="~/js/BTUCalculatorElements.js"></script>
	<script src="~/js/ManagerHomeScript.js"></script>
	<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
